    <div class="container">
        <h2 class="section_title">{{= section_5_subtitle }}</h2>
        <div class="section_map">
            <img class="section_map_mobile" src="{{= pathStatic }}/{{= vocab_dir }}/img/6_south_america/south_america_map_480.png" alt="">
