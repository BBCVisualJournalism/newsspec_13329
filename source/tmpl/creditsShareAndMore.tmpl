<footer class="section footer">
	<div class="container">
		<hr class="footer_line-thin">

		<h2 class="footer_title">{{= credits_title }}</h2>
		<p>{{= credits }}</p>

		<h2 class="footer_title">
			{{= share_this_story }} <a class="footer_title_smalllink" href="{{= about_sharing_link }}">{{= about_sharing }}</a>
		</h2>
		<ul class="footer_share">
			<li>
				<a class="footer_share_link footer_share_link-email" href="mailto:?subject=<!-- urlencodeme-start -->{{= share_title }}<!-- urlencodeme-end -->&amp;body=<!-- urlencodeme-start -->{{= share_description }} {{= share_url }}<!-- urlencodeme-end -->">
					<img src="{{= pathStatic }}/{{= vocab_dir }}/img/share-icons/email.png?v={{= version }}" alt="email share">
				</a>
			</li>
			<li>
				<a class="footer_share_link footer_share_link-facebook" href="http://www.facebook.com/dialog/feed?app_id=58567469885&amp;redirect_uri=<!-- urlencodeme-start -->{{= full_url }}<!-- urlencodeme-end -->&amp;link=<!-- urlencodeme-start -->{{= full_url }}<!-- urlencodeme-end -->" target="_blank">
					<img src="{{= pathStatic }}/{{= vocab_dir }}/img/share-icons/facebook.png?v={{= version }}" alt="facebook share">
				</a>
			</li>
			<li>
				<a class="footer_share_link footer_share_link-twitter" href="https://twitter.com/intent/tweet?text=<!-- urlencodeme-start -->{{= twitter_message }}<!-- urlencodeme-end -->&amp;url=<!-- urlencodeme-start -->{{= share_url }}<!-- urlencodeme-end -->" data-social-url="https://twitter.com/intent/tweet?text=<!-- urlencodeme-start -->{{= twitter_message }}<!-- urlencodeme-end -->&amp;url=" data-target-url="<!-- urlencodeme-start -->{{= share_url }}<!-- urlencodeme-end -->" target="_blank">
					<img src="{{= pathStatic }}/{{= vocab_dir }}/img/share-icons/twitter.png?v={{= version }}" alt="twitter share">
				</a>
			</li>
			<li>
				<a class="footer_share_link footer_share_link-linkedin" href="https://www.linkedin.com/shareArticle?mini=true&amp;url=<!-- urlencodeme-start -->{{= share_url }}<!-- urlencodeme-end -->&amp;title=<!-- urlencodeme-start -->{{= share_title }}<!-- urlencodeme-end -->&amp;summary=<!-- urlencodeme-start -->{{= share_description }}<!-- urlencodeme-end -->&amp;source=<!-- urlencodeme-start -->BBC News<!-- urlencodeme-end -->" target="_blank">
					<img src="{{= pathStatic }}/{{= vocab_dir }}/img/share-icons/linkedin.png?v={{= version }}" alt="linked in share">
				</a>
			</li>
		</ul>

		<div class="footer_onwardjourney">
			<hr class="footer_line-thick">
			<h2 class="footer_title">{{= onward_journey_title }}</h2>
			<hr class="footer_line-thin">
			<a class="footer_onwardjourney_link" href="{{= onward_journey_link_1 }}">
				<div class="footer_onwardjourney_link_image">
					<img src="{{= pathStatic }}/{{= vocab_dir }}/img/9_promos/iplayer_promo.jpg?v={{= version }}" alt="">
				</div>
				<p class="footer_onwardjourney_link_text">{{= onward_journey_text_1 }}</p>
				<div class="clearfix"></div>
			</a>
		</div>
	</div>
</footer>